<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.div.expensemanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeScreen" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".RegistrationCompleteActivity" />
        <activity android:name=".LogInActivity" />
        <activity android:name=".LogInResultActivity" />
        <activity android:name=".AddTripActivity" />
        <activity android:name=".ReportTripActivity" />
        <activity android:name=".DeleteTripActivity" />
        <activity android:name=".TripDetailsActivity" />
        <activity android:name=".ExpenseDetailsActivity" />
        <activity android:name=".TripRegisteredActivity" />
        <activity android:name=".ExpenseDetailsActivity2" />
        <activity android:name=".TripDetailsReportActivity" />
        <activity android:name=".ExpenseDetailsReportActivity"></activity>
    </application>

</manifest>